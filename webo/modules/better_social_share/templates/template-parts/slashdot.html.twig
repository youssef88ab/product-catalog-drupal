    <span class="better-social-share-svg" style="width:{{ buttons_size??'22' }}px;height:{{ buttons_size??'22' }}px;" title="{{ 'Slashdot'|t }}">
        <svg focusable="false" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 32 32">
            <g fill="{{ icon_color|default('#fff') }}">
                <path d="M20.89 6h-5L8.61 26h5"></path>
                <circle cx="20.89" cy="23.5" r="2.5"></circle>
            </g>
        </svg>
    </span>
