<?php

/**
 * @file
 * Contains views_split.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function views_split_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the views_split module.
    case 'help.page.views_split':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Views display plugin that allows the first xx results in a different viewmode') . '</p>';
      return $output;

    default:
  }
}
